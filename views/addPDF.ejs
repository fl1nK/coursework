<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/main.css">
    <title>Додати PDF шаблон</title>
</head>
<body>
<%- include('./partials/nav.ejs') %>

<div class="add-file-container">
    <h1>Додати PDF шаблон</h1>
    <form class="add-file" action="/add-pdf-file" method="post" enctype="multipart/form-data">
        <label>
            <input type="text" name='name' placeholder="Напишіть назву для PDF файлу" required/>
        </label>

        <div class="upload-file__wrapper">
            <input
                    type="file"
                    name="pdfFile"
                    id="upload-file__input_1"
                    class="upload-file__input"
                    accept=".pdf"
                    required
            >
            <label class="upload-file__label" for="upload-file__input_1">
                <span class="upload-file__text">Завантажити PDF файл</span>
            </label>
        </div>
        <button class="form-submit" type='submit'>Додати</button>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const inputFile = document.querySelectorAll(".upload-file__input");

        /////////// Кнопка «Завантажити PDF файл» ///////////
        inputFile.forEach(function(el) {
            let textSelector = document.querySelector(".upload-file__text");

            // Подія вибору файла
            el.addEventListener("change", function (e) {
                uploadFile(el.files[0]);
            });

            // Перевіряємо розмір файлу і виводим назву
            const uploadFile = (file) => {

                // файла <2 Мб
                if (file.size > 2 * 1024 * 1024) {
                    alert("Файл должен быть не более 5 МБ.");
                    return;
                }
                textSelector.textContent = file.name;
            }
        });
    });
</script>
</body>
</html>