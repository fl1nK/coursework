<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>PDF Patterns</title>
</head>
<body>

<h1>Patterns:</h1>
<ul>
    <% if (patterns.length) { %>
        <% patterns.forEach(({ id, name, filename }) => { %>
            <article>
                <h2>
                    <a href="/patterns/<%= id %>"><%= name %></a>
                </h2>
                <p><%= filename %></p>
            </article>
        <% }) %>
    <% } %>
</ul>
</body>
</html>