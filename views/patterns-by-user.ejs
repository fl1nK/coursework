<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>PDF Patterns</title>
</head>
<body>
<%- include('./partials/nav.ejs') %>

<h1>Patterns:</h1>
<ul>
    <% if (patterns.length) { %>
        <% patterns.forEach(({ id, name, filename }) => { %>
            <article>
                <h2>
                    <a href="/patterns/<%= id %>"><%= name %></a>
                </h2>
                <p><%= filename %></p>
                <form action="/delete-pdf" method="post">
                    <button class="btn-delete">
                        <input type="hidden" class="fas fa-trash-alt" name="fileid" value="<%= id %>">delete
                    </button>
                </form>

            </article>

        <% }) %>
    <% } %>
</ul>
</body>
</html>